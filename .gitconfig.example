[user]
  name = Man Chun Lam
  email = manchun.lam@oracle.com
[core]
  editor = vim -f
[color]
  ui = true
[branch]
  autosetuprebase = always
[alias]
  log-tui = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
[merge]
  tool = opendiff
[http]
[color "diff"]
  whitespace = red reverse
[url "https://github.com/"]
	insteadOf = git@github.com:
[http]
	proxy = http://www-proxy.us.oracle.com:80
